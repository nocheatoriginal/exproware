<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>
  <div class="flex justify-between items-center mb-6">
    <%= link_to I18n.t("projects.archived.back_to_active_projects"), projects_path, class: "py-3 px-5 text-white bg-[#d40031] rounded-full shadow-lg font-semibold border-2 border-[#d40031] hover:bg-white hover:text-[#d40031] hover:border-[#d40031] transition duration-300" %>
  </div>

  <div>
      <div id="projects" class="min-w-full">
        <% @projects.each do |project| %>
          <div class="bg-white p-4 rounded-lg shadow-md mb-10 flex flex-col h-full">
            <%= render partial: "previewproject", locals: { project: project } %>
            <div class="mt-auto flex justify-end">
              <%= link_to I18n.t("projects.project_details"), project, class: "rounded-full py-3 px-6 bg-blue-500 hover:bg-blue-600 text-white font-medium transition-all duration-300 shadow-md" %>
            </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
