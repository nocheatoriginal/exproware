<div class="mx-auto md:w-2/3 w-full flex items-center justify-center min-h-[70vh]">
  <div class="bg-white shadow-lg rounded-xl p-8 w-full max-w-3xl text-center">
    <% if notice.present? %>
      <p class="py-3 px-4 bg-green-100 text-green-700 font-medium rounded-lg shadow-md inline-block mb-6" id="notice">
        <%= notice %>
      </p>
    <% end %>

    <div class="mb-8">
      <%= render @category %>
    </div>

    <div class="flex flex-wrap items-center justify-center gap-4">
      <%= link_to I18n.t("categories.edit_category"), edit_category_path(@category), 
        class: "rounded-full py-3 px-6 bg-blue-500 hover:bg-blue-600 text-white font-medium transition-all duration-300 shadow-md" %>
      
      <%= link_to I18n.t("categories.back_to_categories"), categories_path, 
        class: "rounded-full py-3 px-6 bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium transition-all duration-300 shadow-md" %>

      <%= button_to I18n.t("categories.delete_category"), @category, method: :delete, 
        data: { turbo_confirm: I18n.t("general.delete_confirmation") }, 
        class: "rounded-full py-3 px-6 bg-red-500 hover:bg-red-600 text-white font-medium transition-all duration-300 shadow-md" %>
    </div>
  </div>
</div>
