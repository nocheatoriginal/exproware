<div class="flex items-center justify-center">
  <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md">
    <h2 class="text-2xl font-bold mb-6 text-center"><%= t('devise.passwords.edit.title') %></h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "space-y-6" }) do |f| %>
      
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, t('devise.passwords.edit.new_password_label'), class: "block text-sm font-medium text-gray-700" %>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mb-2">
            (<%= t('devise.passwords.edit.password_hint', count: @minimum_password_length) %>)
          </p>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, t('devise.passwords.edit.password_confirmation_label'), class: "block text-sm font-medium text-gray-700" %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm" %>
      </div>

      <div class="actions">
        <%= f.submit t('devise.passwords.edit.submit_button'), class: "w-full flex justify-center py-2 px-4 border border-transparent rounded-full shadow-sm text-sm font-medium text-white bg-fitiprimary hover:bg-red-900 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500" %>
      </div>
    <% end %>

    <div class="my-6">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
